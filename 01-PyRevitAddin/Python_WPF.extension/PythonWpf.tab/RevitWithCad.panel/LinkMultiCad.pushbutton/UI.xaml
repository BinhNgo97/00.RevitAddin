<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Link Multiple Cad"
        Width="760" Height="520"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#ECEFF1">

    <Window.Resources>

        <!-- Nút màu cam -->
        <Style x:Key="BtnOrange" TargetType="Button">
            <Setter Property="Background"      Value="#FF9800"/>
            <Setter Property="Foreground"      Value="Black"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="Padding"         Value="14,7"/>
            <Setter Property="Margin"          Value="4,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E65100"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CFD8DC"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút màu xanh lá (Link) -->
        <Style x:Key="BtnGreen" TargetType="Button" BasedOn="{StaticResource BtnOrange}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nút màu đỏ (Remove) -->
        <Style x:Key="BtnRed" TargetType="Button" BasedOn="{StaticResource BtnOrange}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#7F0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox -->
        <Style x:Key="TxbInput" TargetType="TextBox">
            <Setter Property="FontSize"                 Value="13"/>
            <Setter Property="Padding"                  Value="6,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush"              Value="#B0BEC5"/>
            <Setter Property="BorderThickness"          Value="1"/>
            <Setter Property="Background"               Value="White"/>
            <Setter Property="MinWidth"                 Value="160"/>
        </Style>

    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Cad folder + Layer Origin + Select Baseline + Link -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Add + Remove -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── Tiêu đề ── -->
        <Border Grid.Row="0"
                Background="#FF9800"
                CornerRadius="20"
                Padding="16,8"
                Margin="0,0,0,10">
            <TextBlock Text="Link Multiple Cad"
                       FontSize="16" FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- ── Row 1: Cad folder | Layer Origin Name | Select Baseline | Link ── -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal"
                   VerticalAlignment="Center" Margin="0,0,0,8">

            <Button x:Name="BtnCadFolder"
                    Content="Cad path folder"
                    Style="{StaticResource BtnOrange}"
                    MinWidth="140"/>

            <!-- Layer Origin Name -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="6,0">
                <TextBlock Text="Layer Origin Name:"
                           FontSize="13" FontWeight="Bold"
                           Foreground="#37474F"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>
                <TextBox x:Name="TxbLayerOrigin"
                         Style="{StaticResource TxbInput}"
                         Text="{Binding LayerOriginName, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Nhập tên layer chứa đường baseline trong mỗi file CAD"/>
            </StackPanel>

            <Button x:Name="BtnSelectBaseLine"
                    Content="Select Base Line in Revit"
                    Style="{StaticResource BtnOrange}"
                    MinWidth="200"/>

            <Button x:Name="BtnLink"
                    Content="Link"
                    Style="{StaticResource BtnGreen}"
                    MinWidth="90"/>
        </WrapPanel>

        <!-- ── Row 2: Add + Remove ── -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <Button x:Name="BtnAdd"
                    Content="Add"
                    Style="{StaticResource BtnOrange}"
                    MinWidth="100"/>
            <Button x:Name="BtnRemove"
                    Content="Remove"
                    Style="{StaticResource BtnRed}"
                    MinWidth="100"/>
        </StackPanel>

        <!-- ── Status bar ── -->
        <Border Grid.Row="3"
                Background="#37474F"
                CornerRadius="4"
                Padding="8,4"
                Margin="0,0,0,6">
            <TextBlock x:Name="TxtStatus"
                       Text="{Binding Status}"
                       Foreground="#80CBC4"
                       FontSize="12"
                       TextWrapping="NoWrap"/>
        </Border>

        <!-- ── DataGrid: File Cad | Base Level ── -->
        <DataGrid x:Name="DgFiles"
                  Grid.Row="4"
                  ItemsSource="{Binding CadFiles}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="#B0BEC5"
                  BorderThickness="1"
                  Background="White"
                  RowBackground="White"
                  AlternatingRowBackground="#F5F5F5"
                  HeadersVisibility="Column"
                  FontSize="13">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"        Value="#ECEFF1"/>
                    <Setter Property="FontWeight"        Value="Bold"/>
                    <Setter Property="Padding"           Value="10,6"/>
                    <Setter Property="BorderBrush"       Value="#B0BEC5"/>
                    <Setter Property="BorderThickness"   Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="TextBlock.TextDecorations"  Value="Underline"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <!-- Cột File Cad – ComboBox luôn hiển thị, update qua SelectionChanged event -->
                <DataGridTemplateColumn Header="File Cad" Width="3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox x:Name="ComboCadFile"
                                      ItemsSource="{Binding DataContext.AvailableDwgFiles,
                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding SelectedEntry, Mode=OneWay}"
                                      DisplayMemberPath="Name"
                                      FontSize="13"
                                      Margin="2,1"
                                      VerticalAlignment="Center"
                                      Validation.ErrorTemplate="{x:Null}"
                                      Tag="filecad"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Cột Base Level – ComboBox luôn hiển thị, update qua SelectionChanged event -->
                <DataGridTemplateColumn Header="Base Level" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox x:Name="ComboLevel"
                                      ItemsSource="{Binding DataContext.Levels,
                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding BaseLevel, Mode=OneWay}"
                                      FontSize="13"
                                      Margin="2,1"
                                      VerticalAlignment="Center"
                                      Validation.ErrorTemplate="{x:Null}"
                                      Tag="level"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
