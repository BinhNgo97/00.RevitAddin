<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model By CAD" Width="1050" Height="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Style nút xanh lá -->
        <Style x:Key="BtnGreen" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1B5E20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút cam -->
        <Style x:Key="BtnOrange" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút xanh lá nhạt (beam) -->
        <Style x:Key="BtnLightGreen" TargetType="Button">
            <Setter Property="Background" Value="#7CB342"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#558B2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33691E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút cyan -->
        <Style x:Key="BtnCyan" TargetType="Button">
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0097A7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút đỏ (Delete) -->
        <Style x:Key="BtnRed" TargetType="Button">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút xám (Refresh) -->
        <Style x:Key="BtnGray" TargetType="Button">
            <Setter Property="Background" Value="#546E7A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#37474F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <!-- Button strip -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main body -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── Row 0: Buttons ── -->
        <WrapPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="BtnSelectElements" Content="Select Elements in Cad (Column/Footing)"
                    Style="{StaticResource BtnGreen}" MinWidth="220"/>
            <Button x:Name="BtnSelectBeams" Content="Select Elements in Cad (Beam)"
                    Style="{StaticResource BtnLightGreen}" MinWidth="210"/>
            <Button x:Name="BtnSelectGridCad" Content="Select grid in Cad"
                    Style="{StaticResource BtnGreen}" MinWidth="160"/>
            <Button x:Name="BtnSelectGridRevit" Content="Select grid in Revit"
                    Style="{StaticResource BtnOrange}" MinWidth="170"/>
            <Button x:Name="BtnCreateModel" Content="Create Model"
                    Style="{StaticResource BtnCyan}" MinWidth="140"/>
            <Button x:Name="BtnDelete" Content="Delete Selected"
                    Style="{StaticResource BtnRed}" MinWidth="140"/>
            <Button x:Name="BtnRefresh" Content="↺ Refresh"
                    Style="{StaticResource BtnGray}" MinWidth="100"/>
        </WrapPanel>

        <!-- ── Row 1: Status bar ── -->
        <Border Grid.Row="1"
                Background="#1C2A33"
                CornerRadius="4"
                Padding="8,3"
                Margin="0,0,0,6">
            <TextBlock x:Name="TxtStatus"
                       Text="{Binding Status}"
                       Foreground="#80CBC4"
                       FontSize="12"
                       TextWrapping="NoWrap"/>
        </Border>

        <!-- ── Row 2: Left (Preview) + Right (DataGrid) ── -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Left: Preview canvas ~55% -->
                <ColumnDefinition Width="3*"/>
                <!-- Splitter -->
                <ColumnDefinition Width="6"/>
                <!-- Right: DataGrid ~45% -->
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- ── LEFT: Preview panel ── -->
            <Border Grid.Column="0"
                    Background="#1C2A33"
                    BorderBrush="#546E7A"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview title -->
                    <TextBlock Grid.Row="0"
                               Text="Preview"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#80DEEA"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,4"
                               TextDecorations="Underline"/>

                    <!-- Canvas drawing area -->
                    <Canvas x:Name="DrawingCanvas"
                            Grid.Row="1"
                            Background="Transparent"
                            ClipToBounds="True"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- ── SPLITTER ── -->
            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          Background="#37474F"
                          VerticalAlignment="Stretch"/>

            <!-- ── RIGHT: Set up data type panel ── -->
            <Border Grid.Column="2"
                    Background="#1C2A33"
                    BorderBrush="#546E7A"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid title -->
                    <TextBlock Grid.Row="0"
                               Text="Set up data type"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#80DEEA"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,4"
                               TextDecorations="Underline"/>

                    <!-- DataGrid -->
                    <DataGrid x:Name="DgGroups"
                              Grid.Row="1"
                              ItemsSource="{Binding CadGroups}"
                              SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              RowHeaderWidth="0"
                              Background="#1C2A33"
                              Foreground="#ECEFF1"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#37474F"
                              BorderThickness="0">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#37474F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="BorderBrush" Value="#546E7A"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#263238"/>
                                <Setter Property="Foreground" Value="#ECEFF1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#00838F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#37474F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <!-- Column 0: Số lượng -->
                            <DataGridTextColumn Header="Qty"
                                               Binding="{Binding Count}"
                                               IsReadOnly="True"
                                               Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="4,4"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#FFD54F"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Column 1: Data From Cad (read-only) -->
                            <DataGridTextColumn Header="Data From Cad"
                                               Binding="{Binding Label}"
                                               IsReadOnly="True"
                                               Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#00E5FF"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Column 2: Category (ComboBox) -->
                            <DataGridTemplateColumn Header="Category" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Category}"
                                                   Padding="6,4"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                                                  ItemsSource="{Binding DataContext.Categories,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  IsEditable="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <!-- Column 3: Family Type (ComboBox lọc theo Category) -->
                            <DataGridTemplateColumn Header="Family Type" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FamilyType}"
                                                   Padding="6,4"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding FamilyType, UpdateSourceTrigger=PropertyChanged}"
                                                  ItemsSource="{Binding FilteredFamilyTypes}"
                                                  IsEditable="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <!-- Column 4: Base Level (ComboBox) -->
                            <DataGridTemplateColumn Header="Base Level" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BaseLevel}"
                                                   Padding="6,4"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding BaseLevel, UpdateSourceTrigger=PropertyChanged}"
                                                  ItemsSource="{Binding DataContext.Levels,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  IsEditable="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
