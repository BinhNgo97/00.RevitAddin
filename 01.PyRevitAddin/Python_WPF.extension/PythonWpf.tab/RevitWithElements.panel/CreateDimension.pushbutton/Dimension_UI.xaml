<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dimension Tools"
        Height="180"
        Width="260"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="10">

        <Button Content="Dim Grid / Level"
                Height="30"
                Margin="0,0,0,6"
                Click="OnDimGridLevel"/>

        <Button Content="Dim Element by RefPlane"
                Height="30"
                Margin="0,0,0,10"
                Click="OnDimElementRefPlan"/>

        <Border Background="#EEE" Padding="6">
            <TextBox Text="{Binding StatusText}" />
        </Border>

    </StackPanel>
</Window>
